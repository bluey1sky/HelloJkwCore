<Styled @bind-Classname="@cssReporraBoard">
    font-color: black;
    & .board-cell {
        width: 25px;
        height: 25px;
    }
    & .cell-color-A {
        background-color: #DBB7EE;
    }
    & .cell-color-B {
        background-color: #F8CBAD;
    }
    & .cell-color-C {
        background-color: #FFE699;
    }
    & .cell-color-D {
        background-color: #C6E0B4;
    }
    & .cell-color-E {
        background-color: #FF9595;
    }
    & .cell-color-F {
        background-color: #999999;
    }
</Styled>

@if (Board != null)
{
    <table class="@cssReporraBoard">
        @foreach (var row in Sequence)
        {
            <tr class="board-row">
                @foreach (var column in Sequence)
                {
                    var cell = Board.GetCell(row, column);
                    <td class="board-cell cell-color-@cell.Color.ToString()">
                    </td>
                }
            </tr>
        }
    </table>
}

